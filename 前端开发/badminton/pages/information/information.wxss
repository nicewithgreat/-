.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff5fb
} 

/*顶部图片*/
.login-icon{
  display: flex;
  flex-direction: row;
  height: 380rpx;
  background-color: #fff;
  align-items: center;
  position: relative;
}
.login-img{
  width: 750rpx;
  height: 380rpx;
}
/* 名称和头像 */
.userContent{
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
}

.userinfo-avatar {
  overflow:hidden;  
  display: block;  
  width: 140rpx;  
  height: 140rpx;  
  margin: 20rpx;  
  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
  font-size: 50rpx;
  margin-left: auto;/*靠右*/
}
/*表单内容*/
.login-from {
  width: 100%;
  margin-top: 10px;
  flex: auto;
  height:100%;
}
 
.inputView {
  background-color: #fff;
  line-height: 44px;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 16px;
  height: 16px
}
 
.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px
}
.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: #cccccc;
  font-size: 14px
}
 
.line {
  width: 100%;
  height: 1px;
  background-color: #cccccc;
  margin-top: 1px;
}
/* 标题 */
.content-title {
  font-size: 5vh;
  color: #ff4c91;
  text-align: center;
  margin-bottom: 2.5vh;
}
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}



.usermotto {
  margin-top: 200px;
}