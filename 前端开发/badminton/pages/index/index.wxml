<!--已订场-->
<l-card type="primary" image="/images/2.jpg" title="塑胶一号场">
		<text decode="{{true}}">&nbsp;&nbsp;&nbsp;</text>
			<view class="content" wx:if="{{todaycourt[0].courtState==0}}">
				17:30-19:30：空闲	<text decode="{{true}}">&nbsp;</text>
				<l-button type="default"  bindtap="showDialog" plain width="40" height="40" >预定</l-button>
