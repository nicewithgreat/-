			<view class="content" wx:elif="{{todaycourt[0].courtState==1}}">
				17:30-19:30：已订	<text decode="{{true}}">&nbsp;</text>
				<l-button type="default"  bindtap="showDialog" plain width="30" height="40">预定</l-button>
			</view>
			<text decode="{{true}}">&nbsp;&nbsp;&nbsp;</text>
			<view class="content" wx:if="{{todaycourt[8].courtState==0}}">
				19:30-22:00：空闲	<text decode="{{true}}">&nbsp;</text>
				<l-button type="default"  bindtap="showDialog" plain width="30" height="40" >预定</l-button>
			</view>
			<view class="content" wx:elif="{{todaycourt[8].courtState==1}}">
